<Window x:Class="Group2.MilkTeaShop.WPF.LogoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group2.MilkTeaShop.WPF"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="400"
        ShowInTaskbar="False">
    <Grid>
        <Image x:Name="LogoImage" Source="pack://application:,,,/Group2.MilkTeaShop.WPF;component/Images/logo.png" Height="352"
                VerticalAlignment="Center"
               HorizontalAlignment="Center" Margin="0,0,10,0"
               />
    </Grid>
</Window>
