<Window x:Class="MilkTeaShop_Hantu.CategoryDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilkTeaShop_Hantu"
        mc:Ignorable="d"
        Title="CategoryDetail" Height="450" Width="800"
         WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="42" Margin="283,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="390" IsReadOnly="True"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="42" Margin="283,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="390"/>
        <Label  Content="ID" HorizontalAlignment="Left" Height="42" Margin="195,105,0,0" VerticalAlignment="Top" Width="71" FontSize="16"/>
        <Label Content="Name" HorizontalAlignment="Left" Height="42" Margin="195,199,0,0" VerticalAlignment="Top" Width="71" FontSize="16"/>
        <Label x:Name="TitleLabel" Content="Label" HorizontalAlignment="Left" Height="42" Margin="53,24,0,0" VerticalAlignment="Top" Width="425" FontSize="24"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="50" Margin="195,296,0,0" VerticalAlignment="Top" Width="152" FontSize="18" Click="SaveButton_Click"/>
        <Button x:Name="BackHomeButton" Content="Back Home" HorizontalAlignment="Left" Height="50" Margin="448,296,0,0" VerticalAlignment="Top" Width="152" FontSize="18" Click="BackHomeButton_Click"/>

    </Grid>
</Window>
