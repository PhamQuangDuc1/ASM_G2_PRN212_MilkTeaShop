<Window x:Class="MilkTeaShop_Hantu.DetailProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilkTeaShop_Hantu"
        mc:Ignorable="d"
        Title="DetailProductWindow" Height="450" Width="800"
         WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="CategoryComboBox" HorizontalAlignment="Left" Height="30" Margin="303,238,0,0" VerticalAlignment="Top" Width="393" />
        <Label Content="ID:" HorizontalAlignment="Left" Height="39" Margin="91,61,0,0" VerticalAlignment="Top" Width="124"/>
        <Label Content="Name" HorizontalAlignment="Left" Height="36" Margin="91,100,0,0" VerticalAlignment="Top" Width="124"/>
        <Image x:Name="ProductImage" HorizontalAlignment="Left" Height="130" Margin="296,136,0,0" VerticalAlignment="Top" Width="290" AllowDrop="True"
       Drop="ProductImage_Drop"
       DragEnter="ProductImage_DragEnter"/>
        <Label Content="Image" HorizontalAlignment="Left" Height="45" Margin="91,172,0,0" VerticalAlignment="Top" Width="124"/>
        <Label Content="Category" HorizontalAlignment="Left" Height="42" Margin="91,232,0,0" VerticalAlignment="Top" Width="124"/>
        <Button x:Name="UpdateButton" Content="save" HorizontalAlignment="Left" Height="44" Margin="217,320,0,0" VerticalAlignment="Top" Width="108" Click="UpdateButton_Click"/>
        <Button x:Name="Category" Content="Category View" HorizontalAlignment="Left" Height="48" Margin="392,320,0,0" VerticalAlignment="Top" Width="128" Click="Category_Click" />
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="26" Margin="296,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="393" IsReadOnly="True"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="26" Margin="296,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="393"/>
        <Label x:Name="TitleLabel" Content="trứng phục sinh" HorizontalAlignment="Left" Height="46" Margin="56,10,0,0" VerticalAlignment="Top" Width="310" FontSize="22"/>
        <Label Content="IsActive" HorizontalAlignment="Left" Height="39" Margin="91,279,0,0" VerticalAlignment="Top" Width="124"/>
        <CheckBox x:Name="IsActiveCheckBox" Content="CheckBox" HorizontalAlignment="Left" Height="26" Margin="296,284,0,0" VerticalAlignment="Top" Width="88"/>
        <Button x:Name="Back_Copy" Content="Back" HorizontalAlignment="Left" Height="48" Margin="581,320,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click"/>

    </Grid>
</Window>
