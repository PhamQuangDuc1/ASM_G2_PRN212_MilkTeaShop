<Window x:Class="MilkTeaShop_Hantu.ProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilkTeaShop_Hantu"
        mc:Ignorable="d"
        Title="ProductView" Height="450" Width="800" Loaded="Window_Loaded"
         WindowStartupLocation="CenterScreen">

    <Grid>
        <DataGrid x:Name="DataGridProduct" HorizontalAlignment="Center" Height="256" Margin="0,43,0,0" VerticalAlignment="Top" Width="780" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="30" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding ProductName}"/>

                <DataGridTextColumn Header="Category Name" Width="100" Binding="{Binding CategoryName}"/>
                <DataGridTemplateColumn Header="Image" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageObject}" Width="60" Height="60" Stretch="UniformToFill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Height="38" Margin="10,349,0,0" VerticalAlignment="Top" Width="95" Click="CreateButton_Click"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Height="38" Margin="110,349,0,0" VerticalAlignment="Top" Width="95" Click="UpdateButton_Click"/>
        <Button x:Name="ReactiveButton" Content="View Active Flase" HorizontalAlignment="Left" Height="38" Margin="210,349,0,0" VerticalAlignment="Top" Width="139" Click="ReactiveButton_Click" />
        <Button x:Name="Active" Content="View Active" HorizontalAlignment="Left" Height="38" Margin="354,349,0,0" VerticalAlignment="Top" Width="110" Click="Active_Click" />
        <Button x:Name="DeleteButton_Copy1" Content="Active fales" HorizontalAlignment="Left" Height="38" Margin="469,349,0,0" VerticalAlignment="Top" Width="123" Click="DeleteButton_Click"/>
        <Button x:Name="DeleteButton" Content="back home" HorizontalAlignment="Left" Height="38" Margin="697,349,0,0" VerticalAlignment="Top" Width="95" Click="DeleteButton_Click_1"/>
        <Button x:Name="Category" Content="Category" HorizontalAlignment="Left" Height="38" Margin="597,349,0,0" VerticalAlignment="Top" Width="95" Click="Category_Click" />

    </Grid>
</Window>
